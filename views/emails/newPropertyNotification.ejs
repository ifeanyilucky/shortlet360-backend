<%- include('./layout/emailLayout', {
  title: 'New Property Listing',
  content: `
    <div class="email-content">
      <h2>New Property Listing Submitted</h2>
      
      <div class="info-section">
        <p><strong>Date:</strong> ${date}</p>
        <p><strong>Property ID:</strong> ${property.short_id}</p>
        <p><strong>Status:</strong> <span style="color: #FFA500; font-weight: bold;">Pending Review</span></p>
      </div>
      
      <div class="info-section">
        <h3>Property Details</h3>
        <p><strong>Name:</strong> ${property.property_name}</p>
        <p><strong>Type:</strong> ${property.property_type}</p>
        <p><strong>Category:</strong> ${property.property_category}</p>
        <p><strong>Location:</strong> ${property.location.street_address}, ${property.location.city}, ${property.location.state}</p>
        <p><strong>Bedrooms:</strong> ${property.bedroom_count}</p>
        <p><strong>Bathrooms:</strong> ${property.bathroom_count}</p>
      </div>
      
      <div class="info-section">
        <h3>Owner Information</h3>
        <p><strong>Owner ID:</strong> ${owner.short_id}</p>
        <p><strong>Name:</strong> ${owner.first_name} ${owner.last_name}</p>
        <p><strong>Email:</strong> ${owner.email}</p>
        <p><strong>Phone:</strong> ${owner.phone_number || 'Not provided'}</p>
      </div>
      
      <div class="action-section">
        <p>This property requires admin review before it can be published on the platform.</p>
        <p>Please review and approve or reject this property listing.</p>
        <div style="text-align: center; margin-top: 20px;">
          <a href="${adminUrl}" class="button">Review in Admin Panel</a>
        </div>
      </div>
    </div>
  `
}) %>
